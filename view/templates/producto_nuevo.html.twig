{% extends "layout.html.twig" %}

{% block otherstylesheet %}
    <link rel="stylesheet" href="{{ constant('PATH_URL_CSS') }}producto.css">
{% endblock %}

{% block botonera %}
    <li class="active">
        Productos - Nuevo
    </li>
{% endblock %}

{% block container_titulo %}
    Productos - Nuevo
{% endblock %}

{% block container_html %}
    <div class="col-md-12">
        <form class="form-horizontal" action="{{ constant('ROOT_URL') }}producto.php?action=submit_producto" method="post">
            <fieldset>
                <legend>Informaci√≥n del Producto</legend>
                <div class="form-group">       		
                    <label class="col-md-3 control-label" for="nombre">Nombre</label>
                    <div class="col-md-7">
                        <input class="form-control" id="nombre" type="text" name="nombre" placeholder="Ingrese el nombre..." {% if nombre is defined %} value="{{ nombre }}" {% endif %} required="required">
                    </div>
                </div>    
                <div class="form-group">        		
                    <label class="col-md-3 control-label"  for="marca">Marca</label>
                    <div class="col-md-7">
                        <input class="form-control" id="marca" type="text" name="marca" placeholder="Ingrese la marca..." {% if marca is defined %} value="{{ marca }}" {% endif %} required="required">
                    </div>
                </div>    
                <div class="form-group">       		
                    <label class="col-md-3 control-label"  for="codigobarra">C&oacute;digo de barra</label>
                    <div class="col-md-7">
                        <input class="form-control" id="codigobarra" type="text" name="codigobarra" placeholder="Ingrese el codigo de barra..." {% if codigoBarra is defined %} value="{{ codigoBarra }}" {% endif %} required="required">
                    </div>
                </div>    
                <div class="form-group">       		
                    <label class="col-md-3 control-label"  for="stockMinimo">Cantidad m&iacute;nima de stock</label>
                    <div class="col-md-7">
                        <input class="form-control" id="stockMinimo" type="number" name="stockMinimo" min="1" placeholder="Ingrese el stock minimo..." {% if stockMinimo is defined %} value="{{ stockMinimo }}" {% endif %} required="required">
                    </div>
                </div>    
                <div class="form-group">      		
                    <label class="col-md-3 control-label"  for="precioVentaUnitario">Precio de venta unitario</label>
                    <div class="col-md-7">
                        <input class="form-control" id="precioVentaUnitario" type="number" name="precioVentaUnitario" min="0.50" step="0.10" placeholder="Ingrese el precio de venta unitario..." {% if precioVentaUnitario is defined %} value="{{ precioVentaUnitario }}" {% endif %} required="required">
                    </div>
                </div>    
                <div class="form-group">
                    <label class="col-md-3 control-label"  for="categoria">Categor&iacute;a</label>
                    <div class="col-md-7">
                        <select class="form-control" id="categoria" name="categoria" required="required">
                            <option value="">Seleccionar</option>
                            {% for categoria in categorias %}
                                <option value="{{ categoria.id }}" {% if categoria.id == idCategoria %} selected {% endif %}>{{ categoria.verCadenaCategorias() | title }}</option>
                            {% endfor %} 
                        </select> 
                    </div>
                </div>
                <div class="form-group">      		
                    <label class="col-md-3 control-label"  for="descripcion">Descripci&oacute;n</label>
                    <div class="col-md-7">
                        <input class="form-control" id="descripcion" type="text" name="descripcion" placeholder="Ingrese la descripcion..." {% if descripcion is defined %} value="{{ descripcion }}" {% endif %} required="required">
                    </div>
                </div> 
                <div class="form-group">
                    <div class="col-md-12 text-right">
                        <input class="btn btn-success" type="submit" value="Registrar">
                    </div>
                </div>   
            </fieldset>
            {% include  'csrf_tag.html.twig'%}
        </form>
    </div>  
{% endblock %} 